{
  // env specific
  "git.path": "/usr/bin/git",
  "files.encoding": "utf8",
  "files.eol": "\n",
  // window
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 0,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "window.restoreFullscreen": true,
  "zenMode.restore": true,
  "workbench.sideBar.location": "left",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "One Dark Pro",
  "window.title": "${rootName}${separator}${activeEditorMedium} ${dirty}",
  // explorer
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  // bread crumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "last",
  "breadcrumbs.symbolPath": "last",
  // editor
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 300,
  "editor.wordWrap": "wordWrapColumn",
  "editor.lineNumbers": "relative",
  "editor.renderIndentGuides": true,
  "editor.rulers": [
    80,
    100
  ],
  "editor.fontSize": 12,
  "editor.fontFamily": "'Fira Code', monospace, 'Droid Sans Mono', 'Courier New', 'Droid Sans Fallback'",
  "editor.renderWhitespace": "boundary",
  "editor.fontLigatures": true,
  "eslint.autoFixOnSave": true,
  "tslint.autoFixOnSave": true,
  "prettier.eslintIntegration": true,
  "todohighlight.isCaseSensitive": false,
  "editor.wordBasedSuggestions": false,
  // terminal
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\usr\\bin\\bash.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "monospace, 'Droid Sans Mono', 'Courier New', 'Droid Sans Fallback'",
  "terminal.integrated.rendererType": "dom",
  // files
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.hotExit": "off",
  "files.exclude": {
    "**/node_modules": true,
    "**/.history": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "html.suggest.angular1": false,
  "html.suggest.ionic": false,
  // extensions
  "extensions.autoUpdate": true,
  // vim
  "vim.leader": " ",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "d"
      ],
      "after": [
        "\"",
        "*",
        "d"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "after": [
        "\"",
        "*",
        "p"
      ]
    },
    {
      "before": [
        "leader",
        "y"
      ],
      "after": [
        "\"",
        "*",
        "y"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "d"
      ],
      "after": [
        "\"",
        "*",
        "d"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "after": [
        "\"",
        "*",
        "p"
      ]
    },
    {
      "before": [
        "leader",
        "y"
      ],
      "after": [
        "\"",
        "*",
        "y"
      ]
    },
    {
      "before": [
        "leader",
        "x"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.insertSnippet",
          "args": []
        }
      ]
    },
    {
      "before": [
        "Z",
        "Z"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "m"
      ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "bookmarks.listFromAllFiles"
      ]
    }
  ],
  // language specific
  "javascript.format.enable": true,
  "javascript.validate.enable": true,
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  // project manager
  "projectManager.groupList": true,
  "projectManager.vscode.baseFolders": [
    "/home/chipp972/Documents"
  ],
  // git lens
  "workbench.colorCustomizations": {
    "statusBar.foreground":"#000",
    "statusBar.background": "#666666",
    "statusBar.noFolderBackground": "#BF616A",
    "statusBar.debuggingBackground": "#BF616A"
  }
}
